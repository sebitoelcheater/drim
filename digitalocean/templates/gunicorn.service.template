[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User={{user}}
Group=www-data
WorkingDirectory=/home/{{user}}/{{name}}
ExecStart=/home/{{user}}/{{name}}/venv/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/{{user}}/{{name}}/{{name}}.sock {{name}}.wsgi:application

[Install]
WantedBy=multi-user.target
